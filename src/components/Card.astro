---
const { title, description, imagen, indice } = Astro.props;

const formattedIndex = (indice + 1).toString().padStart(2, '0');
---z

<article class="card">
    <div class="imagen-card">
        <img src={imagen} />
        <div class="numeracion-card">
            <span>#{formattedIndex}</span>
        </div>
    </div>

    <div class="contenido-card">
        <h2>{title}</h2>
        <p>{description}</p>
    </div>
</article>

<style>
    .card {
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        position: relative;
    }

    .imagen-card {
        position: relative;
        transition: scale .3s ease;

        &:hover {
            scale: 1.05;
        }
    }

    .imagen-card:hover .numeracion-card {
        font-size: 2.5rem;
        font-weight: bold;
        transition: font-size .3s ease;
    }

    .card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        cursor: pointer;
        border-radius: 10px;
    }

    .card .numeracion-card {
        position: absolute;
        top: 15px;
        left: 15px;
        font-size: 1.5rem;
        width: 40px;
        height: 40px;
        rotate: -15deg;

        
    }

    .contenido-card {
        padding: 10px 15px;
    }

    .contenido-card h2 {
        font-size: 36px;
        margin-bottom: 10px;
    }

    .contenido-card p {
        color: rgb(31, 41, 55 / 1);
        font-family: system-ui, sans-serif;
        font-weight: 300;
        text-wrap: wrap;
    }
</style>
